{% extends 'base.html.twig' %}

{% block title %}Artiste{% endblock %}

{% block body %}
<div class="container justify-content-center text-center">
    <img src="{{ artist.img }}" class="card_image_show pt-3" alt="{{ artist.name }}">

    <h2 class="display-1">{{ artist.name }}</h2>
    <h2>{{ artist.job }}</h2>

    <p>Vous pouvez retrouver {{ artist.name }} dans :</p>
<ul>
{% for performance in artist.performance %}
    <li>  {{ performance.title }} </li>
{% endfor %}
</ul>

    <p>Contacter {{ artist.name }} <a href="mailto:{{ artist.mail }}"> <i class="fa fa-envelope-o"></i></a>
</p>

    <a href="{{ path('circus_index') }}"><button class="btn btn-danger">Retour</button></a>

</div>

{% endblock  %}